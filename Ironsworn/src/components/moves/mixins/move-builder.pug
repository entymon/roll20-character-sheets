include ../content/delve-table
include ./container
include ./oracle-table
include ./standalone-tables
include ../../../data/oracles

//- TODO: Discover a site roll

mixin moveBuilder(opts)
  +container(opts)
    each row in opts.content
      if row.list
        ul
          each item in row.list
            li!=item
      else if row.table
        +oracleTable(oracles.moves[row.table.group].oracles[row.table.name], 'moves', row.table.group)
      else if row.depths_table
        +delveTable
      else if row.ask_the_oracle
        +askTheOracle
      else if row.delve_the_depths
        +delveTheDepths
      else if row.h6
        h6!=row.h6
      else
        p!=row.p

